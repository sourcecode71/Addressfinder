
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <div class="row">
    <link rel="stylesheet" href="~/css/projects.css" />


         <div class="col-md-1 col-lg-1 col-sm-0"></div>
        <div class="col-md-9 col-lg-9 col-sm-12 mb-3 card">
            <div class=" card-body">
                <div class=" col-md-8 card-header card-header-tab-animation">
                    <ul class="nav nav-justified">
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg115-0" class="active nav-link"> <h5> Client Setup </h5> </a></li>
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg115-1" class="nav-link"> <h5> Company Setup </h5>  </a></li>
                    </ul>
                </div>
                
                <div class="card-body">
                     <div class="tab-content">
                     <div class="tab-pane active" id="tab-eg115-0" role="tabpanel">
                           
                         <div style="width:80%;margin-left:4%" class="card-body">
                               <h5 class="card-title">Client </h5>
                            <form class="p-2" action="#" onsubmit="SubmitClient();return false" >
                                <div class="position-relative form-group">
                                    <label for="clinetName" class=""> Clinet Name </label>
                                    <input name="project" id="clientName" placeholder="Clinet Name" class="form-control">
                                 </div>
                                  <div id="clientNameError" class="alert alert-danger ml-1 hide">
                                  </div>
                 
                                <div class=" mt-1 position-relative form-group">
                                    <label for="exampleEmail" class=""> Clinet Address </label>
                                      <textarea name="text" id="clientAddress" class="form-control"></textarea>
                                </div>
                   
                                <button id="btnWrkBudget" class="mt-1 btn btn-primary"> <strong> <i class='fa fa-save'></i> <span id="spSaveUpdate"> Submit </span>  </strong> </button>
                            </form>
                        </div>
                         <div class="mb-3">
                                <div class="card-body"><h5 class="card-title">Client List </h5>
                                    <table class="mb-0 table table-striped">
                                        <thead>
                                        <tr style="font-size:14px">
                                            <th style="width:10%"> # </th>
                                            <th style="width:30%">Client Name </th>
                                            <th style="width:60%"> Client Address</th>
                                        </tr>
                                        </thead>
                                        <tbody id="tbClient">
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                      </div>


                        <div class="tab-pane" id="tab-eg115-1" role="tabpanel">
                            <div style="width:80%;margin-left:4%" class="card-body">
                                <h5 class="card-title">Company </h5>
                                <form class="p-2" action="#" onsubmit="SubmitCompany();return false" >
                                    <div class="position-relative form-group">
                                        <label for="exampleEmail" class=""> Clinet </label>
                                         <select id="companyCLient" class="mb-2 form-control">
                                        </select>
                                        <div id="companyCLientError" class="alert alert-danger ml-1 hide"> </div>
                                        </div>
                                        <div class="position-relative form-group">
                                        <label for="exampleEmail" class=""> Company Name </label>
                                        <input name="project" id="companyName" placeholder="Company Name" class="form-control">
                                        <div id="clientNameError" class="alert alert-danger ml-1 hide">
                                        </div>
                                        </div>
                                        <div class=" mt-1 position-relative form-group">
                                        <label for="exampleEmail" class=""> Company Address </label>
                                        <textarea name="text" id="companyAddress" class="form-control"></textarea>
                                    </div>
                                    <button id="btnWrkBudget" class="mt-1 btn btn-primary"> <strong> <i class='fa fa-save'></i> <span id="spSaveUpdate"> Submit </span>  </strong> </button>
                                </form>
                            </div>

                              <div style="padding:0px" class="card-body">
                                  <h5 class="card-title">Company List </h5>
                                    <table class="mb-0 table table-striped">
                                        <thead>
                                            <tr style="font-size:14px">
                                                <th> # </th>
                                                <th>Client Name </th>
                                                <th>Company Name </th>
                                                <th> Company Address</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbCompany">
                                           
                                      </tbody>
                                   </table>
                                </div>
                        
                    </div>
                  </div>
                </div>
            </div>
        </div>

          <div class="col-md-1 col-lg-1 col-sm-0"></div>
  
    @section Scripts {
        <script src="~/js/company.js"></script>

        <script>
           $(function () {

                Company.initCompany();

            });
        </script>
    }
  </div>


