@{
    Layout = null;
}
@using Web.Models
@model AdminPageDetails
@{
    string currentName = "";
    string currentRole = "";
    byte[] currentRoleByte;
    byte[] currentNameByte;

    if (Context.Session.Keys.Count() > 0)
    {
        Context.Session.TryGetValue("current_user_role", out currentRoleByte);
        Context.Session.TryGetValue("current_user_name", out currentNameByte);

        if (currentRoleByte != null && currentNameByte != null)
        {
            currentRole = System.Text.Encoding.Default.GetString(currentRoleByte);
            currentName = System.Text.Encoding.Default.GetString(currentNameByte);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.css" />
    <script src="/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="text-align: left;width: 15%;" asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/logo.png" width="100%"/> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse justify-content-between">
                    @if (!string.IsNullOrEmpty(currentRole))
                    {
                        <ul class="navbar-nav">
                            <li style="padding-right: 20px">
                                <p class="nav-link text-dark" style="margin-top: 10px">Welcome <b class="text-primary">@currentName</b>!</p>
                            </li>
                            <li class="nav-item" style="padding-right: 20px; margin-top: 10px">
                                <form class="form-inline" action="/Home/Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-sm btn-link btn-danger text-light">Logout</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item" style="padding-right: 20px; margin-top: 10px">
                                <form class="form-inline" action="/Home/Login" method="get">
                                    <button type="submit" class="nav-link btn btn-sm btn-link btn-primary text-light">Login</button>
                                </form>
                            </li>
                        </ul>
                    }
                <ul class="navbar-nav flex-grow-1 col-md-8">
          
                    @if (currentRole == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/Index">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/AddEmployee">Add Employee</a>
                        </li>
                         <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Project
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">  
                              <a class="dropdown-item" href="/Admin/AddProject">Add Project</a>
                              <a class="dropdown-item" href="/project/projectActivities">Project Activities</a>
                              <a class="dropdown-item" href="/company/hourlogs">Hour Log </a>
                              <div class="dropdown-divider"></div>
                              <a class="dropdown-item" href="/company/invoice">
                                  Payment and Invoice 
                              </a>
                            </div>
                          </li>


                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Work Order
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">  
                               <a class="dropdown-item" href="/project/projectWorkOrder">Create Work Order</a>
                                 <a class="dropdown-item" href="/company/invoice">
                                    Payment and Invoice 
                                 </a>
                            </div>
                          </li>

                          <li class="nav-item dropdown">
                               <a class="dropdown-item" href="/company">Company setup</a>
                          </li>


                          <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/GenerateReports">Reports</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/Archived">Archived</a>
                        </li>
                    }
                    @if (currentRole == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Employee/Index">Dashboard</a>
                            </li>
                        }
                </ul>
                </div>
            </div>
        </nav>
    </header>
    <main style="margin-left: 2%; margin-right: 2%">
        <div class="col-md-12 text-center"><h3><u>Add new Project</u></h3></div>
        <div class="row" style="margin-top: 50px">
            <div class="col-md-2 col-sm-0"></div>
            <div class="col-md-6 col-sm-12">
                <div class="row">
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectName">Project name:</label>
                        <input type="text" id="addProjectName" class="form-control" />
                    </div>
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectClient" >Project client:</label>
                          <select id="addProjectClient" class="form-control">
                                <option value="0">Please select a Clinet...</option>
                                @foreach (var client in Model.Clients)
                                {
                                    <option value="@client.Id">@client.Name</option>
                                } 
                            </select>
                    </div>
                </div>

                <div class="row">
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="projectStartDate"> Project Start Date:</label>
                        <input type="date" id="projectStartDate" class="form-control" />
                    </div>
                     <div class="com-md-6 col-sm-12 col-lg-6">
                          <label for="addProjectDelivery" >Project Delivery Date:</label>
                           <input type="date" id="addProjectDelivery" class="form-control" />
                     </div>

                </div>
                  <div class="row">
                        <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectEngineering" style="margin-top: 20px">Engineering:</label>
                        <select id="addProjectEngineering" class="form-control">
                            <option value="0">Please select an employee...</option>
                            @foreach (var employee in Model.Employees)
                            {
                            <option value="@employee.Email">@employee.Email</option>
                            }
                             </select>
                        </div>
                        <div class="com-md-6 col-sm-12 col-lg-6">
                             <label for="addProjectDelivery" style="margin-top: 20px" >Engineer Budget Hours:</label>
                             <input type="number" id="engineerHour" class="form-control" />
                        </div>

                    </div>

                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                               <label for="addProjectDrawing" style="margin-top: 20px">Drawing:</label>
                                <select id="addProjectDrawing" class="form-control">
                                    <option value="0">Please select an employee...</option>
                                    @foreach (var employee in Model.Employees)
                                    {
                                    <option value="@employee.Email">@employee.Email</option>
                                    }
                               </select>
                         </div>
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                             <label for="addProjectDelivery" style="margin-top: 20px" >Engineer Budget Hours:</label>
                             <input type="number" id="drawingBudgetHour" class="form-control" />
                         </div>

                    </div>

                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                               <label for="addProjectBudget" style="margin-top: 20px">Project Budget in $:</label>
                               <input type="text" id="addProjectBudget" value="$ 0" class="form-control" />
                         </div>
                         <div class="com-md-6 col-sm-12 col-lg-6">
                                 <label for="addProjectSchedule" style="margin-top: 20px">Project Schedule Weeks:</label>
                                  <input type="number" id="addProjectSchedule" class="form-control" />
                         </div>
                    </div>
                
                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                                 <label for="addProjectApproval" style="margin-top: 20px">Approval:</label>
                                <select id="addProjectApproval" class="form-control">
                                    <option value="0">Please select an employee...</option>
                                    @foreach (var employee in Model.Employees)
                                    {
                                    <option value="@employee.Email">@employee.Email</option>
                                    }
                                </select>
                         </div>
                        <div class="com-md-6 col-sm-12 col-lg-6">
                            <label for="addProjectEStatus" style="margin-top: 20px">Project EStatus:</label>
                            <input type="text" id="addProjectEStatus" class="form-control" />
                        </div>
                    </div>

                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6 text-center">
                        <button class="btn btn-block btn-sm btn-success" style="margin-top: 50px; margin-bottom: 50px" onclick="AdminPanel.addNewproject()">Add</button>
                    </div>
                </div>
             
            </div>

        </div>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Project Management App
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/adminPanel.js" asp-append-version="true"></script>
    <script src="~/js/employeeDashboard.js" asp-append-version="true"></script>
     <script>
     $(document).ready(function(){
        $('.dropdown-toggle').dropdown()
    });
</script>
</body>
</html>
