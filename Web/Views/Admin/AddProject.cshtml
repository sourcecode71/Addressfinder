@{
    ViewData["Title"] = "Hour Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Web.Models
@model AdminPageDetails
@{
    string currentName = "";
    string currentRole = "";
    byte[] currentRoleByte;
    byte[] currentNameByte;

    if (Context.Session.Keys.Count() > 0)
    {
        Context.Session.TryGetValue("current_user_role", out currentRoleByte);
        Context.Session.TryGetValue("current_user_name", out currentNameByte);

        if (currentRoleByte != null && currentNameByte != null)
        {
            currentRole = System.Text.Encoding.Default.GetString(currentRoleByte);
            currentName = System.Text.Encoding.Default.GetString(currentNameByte);
        }
    }
}


<div> 
    <main style="margin-left: 2%; margin-right: 2%">
        <div class="col-md-12 text-center"><h3><u>Add new Project</u></h3></div>
        <div class="row" style="margin-top: 50px">
            <div class="col-md-2 col-sm-0"></div>
            <div class="col-md-6 col-sm-12">
                <div class="row">
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectName">Project name:</label>
                        <input type="text" id="addProjectName" class="form-control" />
                    </div>
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectClient" >Project client:</label>
                          <select id="addProjectClient" class="form-control">
                                <option value="0">Please select a Clinet...</option>
                                @foreach (var client in Model.Clients)
                                {
                                    <option value="@client.Id">@client.Name</option>
                                } 
                            </select>
                    </div>
                </div>

                <div class="row">
                    <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="projectStartDate"> Project Start Date:</label>
                        <input type="date" id="projectStartDate" class="form-control" />
                    </div>
                     <div class="com-md-6 col-sm-12 col-lg-6">
                          <label for="addProjectDelivery" >Project Delivery Date:</label>
                           <input type="date" id="addProjectDelivery" class="form-control" />
                     </div>

                </div>
                  <div class="row">
                        <div class="com-md-6 col-sm-12 col-lg-6">
                        <label for="addProjectEngineering" style="margin-top: 20px">Engineering:</label>
                        <select id="addProjectEngineering" class="form-control">
                            <option value="0">Please select an employee...</option>
                            @foreach (var employee in Model.Employees)
                            {
                            <option value="@employee.Email">@employee.Email</option>
                            }
                             </select>
                        </div>
                        <div class="com-md-6 col-sm-12 col-lg-6">
                             <label for="addProjectDelivery" style="margin-top: 20px" >Engineer Budget Hours:</label>
                             <input type="number" id="engineerHour" class="form-control" />
                        </div>

                    </div>

                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                               <label for="addProjectDrawing" style="margin-top: 20px">Drawing:</label>
                                <select id="addProjectDrawing" class="form-control">
                                    <option value="0">Please select an employee...</option>
                                    @foreach (var employee in Model.Employees)
                                    {
                                    <option value="@employee.Email">@employee.Email</option>
                                    }
                               </select>
                         </div>
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                             <label for="addProjectDelivery" style="margin-top: 20px" >Engineer Budget Hours:</label>
                             <input type="number" id="drawingBudgetHour" class="form-control" />
                         </div>

                    </div>

                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                               <label for="addProjectBudget" style="margin-top: 20px">Project Budget in $:</label>
                               <input type="text" id="addProjectBudget" value="$ 0" class="form-control" />
                         </div>
                         <div class="com-md-6 col-sm-12 col-lg-6">
                                 <label for="addProjectSchedule" style="margin-top: 20px">Project Schedule Weeks:</label>
                                  <input type="number" id="addProjectSchedule" class="form-control" />
                         </div>
                    </div>
                
                    <div class="row">
                         <div class="com-md-6 col-sm-12 col-lg-6"> 
                                 <label for="addProjectApproval" style="margin-top: 20px">Approval:</label>
                                <select id="addProjectApproval" class="form-control">
                                    <option value="0">Please select an employee...</option>
                                    @foreach (var employee in Model.Employees)
                                    {
                                    <option value="@employee.Email">@employee.Email</option>
                                    }
                                </select>
                         </div>
                        <div class="com-md-6 col-sm-12 col-lg-6">
                            <label for="addProjectEStatus" style="margin-top: 20px">Project EStatus:</label>
                            <input type="text" id="addProjectEStatus" class="form-control" />
                        </div>
                    </div>

                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6 text-center">
                        <button class="btn btn-block btn-sm btn-success" style="margin-top: 50px; margin-bottom: 50px" onclick="AdminPanel.addNewproject()">Add</button>
                    </div>
                </div>
             
            </div>

        </div>
    </main>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/adminPanel.js" asp-append-version="true"></script>
    <script src="~/js/employeeDashboard.js" asp-append-version="true"></script>
         <script>
         $(document).ready(function(){
            $('.dropdown-toggle').dropdown()
        });
    </script>

</div>

