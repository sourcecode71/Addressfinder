<div class="row">
    <div class="col-md-12 text-center">
        <h2>Admin Control Panel</h2>
    </div>
</div>
<div class="row" style="margin-top: 80px">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12 text-center"><h3><u>Add new Employee</u></h3></div>
        </div>
        <div class="row" style="margin-top: 20px">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <label for="addNewName">Employee name:</label>
                <input type="text" id="addNewName" class="form-control" />
                <label for="addNewUserEmail" style="margin-top: 20px">Employee email:</label>
                <input type="text" id="addNewUserEmail" class="form-control" />
                <label for="addNewUserPassword" style="margin-top: 20px">Employee password:</label>
                <input type="password" id="addNewUserPassword" class="form-control" />
                <label for="addNewUserConfirmPassword" style="margin-top: 20px">Confirm password:</label>
                <input type="password" id="addNewUserConfirmPassword" class="form-control" />
                <label for="addNewUserRole" style="margin-top: 20px">Role:</label>
                <select class="form-control" id="addNewUserRole">
                    <option value="0">Please select a role...</option>
                    <option value="1">Admin</option>
                    <option value="2">Employee</option>
                </select>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6 text-center">
                        <button class="btn btn-block btn-sm btn-success" style="margin-top: 20px; margin-bottom: 50px" onclick="AdminPanel.addNewEmployee()">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="col-md-12 text-center"><h3><u>Add new Project</u></h3></div>
    </div>
</div>